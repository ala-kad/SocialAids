{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Association index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Code</th>
                <th>Local</th>
                <th>Objectif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.nom }}</td>
                <td>{{ association.email }}</td>
                <td>{{ association.ville }}</td>
                <td>{{ association.tel }}</td>
                <td>{{ association.code }}</td>
                <td>{{ association.local }}</td>
                <td>{{ association.objectif }}</td>
                <td>
                    <a href="{{ path('app_association_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('app_association_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_association_new') }}">Create new</a>
{% endblock %}
